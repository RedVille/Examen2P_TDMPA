<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="meal"
            type="com.redville.mealapp.domain.model.Meal" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.mealdetail.MealDetailFragment">

        <ImageView
            android:id="@+id/imgMeal"
            loadFromUrl="@{meal.urlDetail}"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_meal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgLike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_likeoff"
            app:layout_constraintEnd_toEndOf="@id/imgMeal"
            app:layout_constraintTop_toTopOf="@id/imgMeal" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@{meal.name}"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@id/imgMeal"
            app:layout_constraintTop_toBottomOf="@id/imgMeal"
            tools:text="Meal" />

        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{meal.category}"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/tvArea"
            app:layout_constraintStart_toEndOf="@id/tvName"
            app:layout_constraintTop_toTopOf="@id/tvName"
            tools:text="Category" />

        <TextView
            android:id="@+id/tvArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{meal.area}"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@id/imgMeal"
            app:layout_constraintTop_toTopOf="@id/tvName"
            tools:text="Alcoholic" />

        <TextView
            android:id="@+id/tvInstructions"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@{meal.instructions}"
            tools:text="@tools:sample/lorem/random"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/imgMeal"
            app:layout_constraintStart_toStartOf="@id/imgMeal"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>